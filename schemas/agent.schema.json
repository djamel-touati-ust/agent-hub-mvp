{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UST Agent Manifest (repo policy)",
  "type": "object",
  "required": ["name", "version", "owner", "language", "description", "entrypoints"],
  "additionalProperties": false,
  "properties": {
    "name":        { "type": "string", "minLength": 1 },
    "version":     { "type": "string", "minLength": 1 },
    "owner":       { "type": "string", "minLength": 3 },
    "language":    { "type": "string" },
    "frameworks":  { "type": "array", "items": { "type": "string" } },
    "description": { "type": "string" },
    "license":     { "type": "string" },
    "entrypoints": {
      "type": "object",
      "required": ["mcp", "a2a"],
      "additionalProperties": true,
      "properties": {
        "mcp": {
          "type": "object",
          "required": ["type", "command"],
          "properties": {
            "type": { "type": "string", "enum": ["stdio", "http"] },
            "command": { "type": "string" },
            "args": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        },
        "a2a": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "preferredTransport": { "type": "string", "enum": ["JSONRPC", "GRPC", "HTTP+JSON"] },
            "publicCardUrl": { "type": "string" },
            "dev": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "port": { "type": "integer", "minimum": 1 },
                "cardPath": { "type": "string" }
              }
            },
            "url": { "type": "string" }  
          }
        }
      }
    },
    "mcp": { "type": "object", "additionalProperties": true },
    "a2a": { "type": "object", "additionalProperties": true },
    "models": { "type": "object", "additionalProperties": true },
    "env":    { "type": "object", "additionalProperties": true },
    "security": { "type": "object", "additionalProperties": true }
  }
}
